    "/recipes/{id}": {
      "get": {
        "tags": ["Recipes"],
        "summary": "Recipe by id",
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "Recipe's id",
            "schema": {
